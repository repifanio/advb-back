{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "no-console": "off",
   "import/prefer-default-export": "off",
   "class-methods-use-this": "off",
   "consistent-return":"off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
